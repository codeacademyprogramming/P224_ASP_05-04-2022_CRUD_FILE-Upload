@model IEnumerable<Product>
@{ 
    int count = 0;
}
<div class="row">
    <div class="col-lg-10">
        <h1>Product Table</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary" asp-action="Create">Create Product</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th >#</th>
                    <th >Title</th>
                    <th >Price</th>
                    <th >Discount Price</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td>@product.Title</td>
                        <td>@product.Price</td>
                        <td>@product.DiscountPrice</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success">Detail</a>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>